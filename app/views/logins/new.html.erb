<div class='row'>
  <div class='well col-md-6 col-md-offset-3'>
  <%=form_tag '/login' do %>
    <%= label_tag :username %>
    <%= text_field_tag :username %>
    
    <br><br>
    
    <%= label_tag :password %>
    <%= password_field_tag :password %>
    
    <br><br>
    
    <%= submit_tag 'login', class:'btn btn-success' %>
    
  <% end %>
  </div>
  
</div>
    